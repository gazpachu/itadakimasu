type Event {
  id: ID! @unique
  slug: String! @unique
  title: String!
  description: String
  dates: [Date]
  places: [Place]
  menus: [Menu]
  participants: [Participant]
}

type Date {
  id: ID! @unique
  timestamp: String!
  event: Event!
}

type Place {
  id: ID! @unique
  name: String!
  url: String
  event: Event!
}

type Menu {
  id: ID! @unique
  name: String!
  url: String
  event: Event!
}

type Participant {
  id: ID! @unique
  name: String!
  dates: [ID]
  places: [ID]
  menus: [ID]
  event: Event!
}
